<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.biblio.controllers.SupprimerLivreController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label text="🗑️ Supprimer un livre" layoutX="200" layoutY="10"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TableView fx:id="tableView" layoutX="30" layoutY="50" prefWidth="540" prefHeight="250">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                <TableColumn fx:id="titreCol" text="Titre" prefWidth="150"/>
                <TableColumn fx:id="auteurCol" text="Auteur" prefWidth="150"/>
                <TableColumn fx:id="anneeCol" text="Année" prefWidth="80"/>
                <TableColumn fx:id="isbnCol" text="ISBN" prefWidth="110"/>
            </columns>
        </TableView>

        <Label text="ID à supprimer:" layoutX="30" layoutY="320"/>
        <TextField fx:id="idField" layoutX="130" layoutY="315" prefWidth="100"/>

        <Button text="Supprimer" layoutX="250" layoutY="315" onAction="#supprimerLivre"/>
        <Button text="Retour" layoutX="450" layoutY="315" onAction="#retourMenuAdmin"/>
    </children>
</AnchorPane>
