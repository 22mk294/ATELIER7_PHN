<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #001e65;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.biblio.controllers.InscriptionController">
    <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" spacing="10" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">
        <children>
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Inscription Lecteur" textFill="WHITE" />
            <TextField fx:id="nomField" promptText="Nom complet" />
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Mot de passe" />
            <Button onAction="#handleInscription" style="-fx-background-color: green; -fx-text-fill: white;" text="S'inscrire" />
            <Label fx:id="statusLabel" textFill="red" />
            <Button layoutX="300" layoutY="400" onAction="#retourMenuAdmin" text="Retour Menu Admin" />

        </children>
        <padding><Insets bottom="20" left="80" right="80" top="20" /></padding>
    </VBox>
</AnchorPane>
