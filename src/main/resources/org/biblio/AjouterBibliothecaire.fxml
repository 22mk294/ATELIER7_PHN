<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.biblio.controllers.AjouterBibliothecaireController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Ajouter un bibliothÃ©caire"/>

        <HBox spacing="10">
            <TextField fx:id="nomField" promptText="Nom"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <PasswordField fx:id="mdpField" promptText="Mot de passe"/>
            <Button text="Ajouter" onAction="#ajouterBibliothecaire"/>
            <Button text="Retour Menu Admin" layoutX="300" layoutY="400" onAction="#retourMenuAdmin" />
        </HBox>

        <TableView fx:id="tableView" prefHeight="300">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150"/>
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                <TableColumn fx:id="actionColumn" text="Action" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>

